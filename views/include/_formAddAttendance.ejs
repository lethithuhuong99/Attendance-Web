<form action="/attendances" method="POST" id="add_attendance">
    <input type="hidden" name="id" value="">
    <div class="form-group row">
        <label for="inputD" class="col-sm-2 col-form-label">Date</label>
        <div class="col-sm-10">
            <input id="inputD"  placeholder="Date" name="date" />
            <script>
                $('#inputD').datepicker({
                    uiLibrary: 'bootstrap4',
                    format:"dd/mm/yyyy",
                    maxDate: new Date(),
                });
            </script>
        </div>
    </div>
    <div class="form-group row">
        <label for="userId" class="col-sm-2 col-form-label">UserId</label>
        <div class="col-sm-10">
            <input type="hidden" name="id" value="">
          <input type="text" class="form-control" name="userId" id="userId" placeholder="userId">
        </div>
      </div>
    <div class="form-group row">
        <label for="mask" class="col-sm-2 col-form-label">Mask</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="mask" id="mask" placeholder="mask">
        </div>
    </div>
    <div class="form-group row">
        <label for="checkIn" class="col-sm-2 col-form-label">CheckIn</label>
        <div class="col-sm-10">
            <input id="checkIn"  placeholder="checkIn" name="checkIn" />
            <script>
                $('#checkIn').datepicker({
                    uiLibrary: 'bootstrap4',
                    // format:"dd/mm/yyyy",
                    maxDate: new Date(),
                });
            </script>
        </div>
    </div>
    <div class="form-group row">
        <label for="checkOut" class="col-sm-2 col-form-label">Check Out</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="checkOut" id="checkOut" placeholder="checkOut">
        </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
</form>